    <class>br.eng.rcc.javamodelo.test.entidades.Janela</class>
    <class>br.eng.rcc.javamodelo.test.entidades.MensagemCorreio</class>
    <class>br.eng.rcc.javamodelo.test.entidades.Porta</class>
    <class>br.eng.rcc.javamodelo.test.entidades.Usuario</class>
    <class>br.eng.rcc.javamodelo.test.entidades.Valor</class>
    
    <properties>
      <property name="hibernate.max_fetch_depth" value="1"/>
      
      
      <!--
      <property name="javax.persistence.sql-load-script-source" value="META-INF/load_mysql.sql"/>
